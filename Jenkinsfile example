pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/EstherTimbwa/industry-devops-project.git'
            }
        }
        stage('Deploy to GCP') {
            steps {
                sshagent(credentials: ['SSH-ID']) {
                    sh '''
                    # Copy the HTML file to the GCP instance
                    scp -o StrictHostKeyChecking=no index.html <devopsdemo>@<Instance-IP>:/var/www/html/
                    '''
                }
            }
        }
    }
}
